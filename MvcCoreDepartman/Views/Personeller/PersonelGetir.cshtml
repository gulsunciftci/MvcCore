@model MvcCoreDepartman.Models.Personel
@{
    ViewData["Title"] = "PersonelGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@using(Html.BeginForm("PersonelGüncelle","Personeller",FormMethod.Post)){
   <b>Personel ID</b>
   @Html.TextBoxFor(x=>x.PersonelID,new {@class="form-control"})
   <br />
   <b>Ad</b>
   @Html.TextBoxFor(x=>x.Ad,new {@class="form-control"})
   <br />
   <b>Soyad</b>
   @Html.TextBoxFor(x=>x.Soyad,new {@class="form-control"})
   <br />
   <b>Şehir</b>
   @Html.TextBoxFor(x=>x.Sehir,new {@class="form-control"})
   <br />
   <b>Birim</b>
   @Html.DropDownListFor(x=>x.Birim.BirimID,(List<SelectListItem>)ViewBag.dgr,new{@class="form-control"})
   <br />
   <button class="btn btn-info">Birim Güncelle</button>
}


