@model CoreFood.Models.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Add Page</h1>
<br />
@using(Html.BeginForm("CategoryAdd","Category" , FormMethod.Post))
{
    @Html.Label("Category Name")
    @Html.TextBoxFor(x=>x.CategoryName, new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryName,"",new {@style="color:red"})
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x=>x.CategoryDescription, new {@class="form-control"})
    <br />

    <button class="btn btn-info" id="btn1">Save</button>

}
