@{
    Layout=null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Ders 4</title>
    </head>
    <body>
       <div style="background-color:#ff6a00">
            @DateTime.Now.ToShortDateString()
       </div>
       <br />
       <div style="background-color:#ffd800">
        @for (int i= 1; i <= 10;i++)
            {
                @i
                <br />
            }
       </div>
       <br />
       <br />
       <div style="background-color:#4cff00">
        @{
            var liste = new List<string>() { "Ankara", "Bursa", "Adana", "İzmir" };
            var count=1;
        }
        @foreach(var li in liste)
        {
            @(count.ToString() + '-'+li)
            count++;
            <br/>
        }
       </div>
    </body>
</html>

